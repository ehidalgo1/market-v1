---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
    <main class="not-found">
        <div class="container">
            <h1 class="text-xl font-bold text-brand-strong text-gray-500">404</h1>
            <p>Página no encontrada, aún se encuentra en desarrollo ;)</p>
            <a href="/">Volver al inicio</a>
        </div>
    </main>
</Layout>

<style>
    .not-found {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .container {
        text-align: center;
    }

    h1 {
        font-size: 6rem;
        margin: 0;
        color: #333;
    }

    p {
        font-size: 1.5rem;
        color: #666;
        margin: 1rem 0;
    }

    a {
        display: inline-block;
        margin-top: 2rem;
        padding: 0.75rem 1.5rem;
        background-color: #0ea5e9;
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        transition: background-color 0.3s;
    }

    a:hover {
        background-color: #0284c7;
    }
</style>